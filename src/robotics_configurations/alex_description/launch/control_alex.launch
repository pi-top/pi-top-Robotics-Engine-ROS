<launch>
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find robotics_configurations)/alex_description/config/alex.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/alex" args="baselink_right_wheel_joint_controller joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <remap from="/joint_states" to="/alex/joint_states" />
  </node>

</launch>